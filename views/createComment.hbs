<div class="-translate-x-12 mt-14 mb-36 ml-2 cardContainer p-6">
  <div class='bg-green-300 p-10 rounded-3xl'>
    <div class="m-7 p-10 card rounded-3xl bg-zinc-700" id='newCommentContainer'>
      <h2 class="text-center pb-5">New Comment</h2>
      <form class="form newCommentForm">
        <div class="formGroup">
          <label>Comment Text:</label>
          <textarea class="form-input bg-transparent border rounded-lg m-1 p-1 border-green-300" type="text" id="newCommentText"></textarea>
        </div>
        <div class="formGroup grid justify-items-center pt-5" data-value='{{post.id}}' id='createCommentBtn'>
          <button class="btn btn-primary border border-green-300 rounded-lg w-fit py-1 px-2" type="submit">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/js/createComment.js"></script>