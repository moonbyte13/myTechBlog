<div class='grid grid-col justify-items-center'>
    {{#each posts as |post|}}
        <div class="flex border border-gray-900 text-zinc-700 bg-green-300 rounded-xl p-2 m-6 w-80 card" id='card{{this.id}}'>
            <div class="w-full">
                <div class="">
                    <p class="">{{this.title}}</p>
                    <div class="flex justify-between align-items-center">
                        <div class="">
                            <a href="/details/" class="">View</a>
                        </div>
                        {{this.likes}} likes
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>


