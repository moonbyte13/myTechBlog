<!-- A header component with a logo and navigation menu. -->
<header class='block top-0 w-full z-10 flex flex-row justify-between bg-zinc-700 p-5 border-2 border-zinc-700 mb-px h-min'>
  <!-- Logo linking to the homepage -->
  <a href="/">
    <!-- Large title with a custom font -->
    <h1 class='text-5xl' style="font-family: 'Major Mono Display';">A Tech Blog</h1>
  </a>
  <!-- Navigation menu with conditional rendering -->
  <nav class='flex items-center'>
    {{#if loggedIn}}
      <!-- Show user's username if logged in -->
      <label class='m-1 w-max'>{{ username }}</label> 
      <label class='m-1'>|</label>
      <a class='m-1' href="/">Homepage</a>
      <label class='m-1'>|</label>
      <a class='m-1' href="/dashboard">Dashboard</a>
      <label class='m-1'>|</label>
      <button class='m-1' id="logout">Logout</button>
    {{else}}
      <a class='m-1' href="/">Homepage</a>
      <label class='m-1'>|</label>
      <a class='m-1' href="/login">Login</a>
    {{/if}}
  </nav>
</header>