<div class='w-5/6 -translate-x-12 mt-6 mb-36 ml-2 cardContainer'>
  {{#if loggedIn}}
    <a class='m-7 w-full flex justify-center' href="/createCommentForm/{{post.id}}">
      <p class='px-3 py-2 card rounded-full hover:cursor-pointer bg-zinc-700' data-value='{{post.id}}'>Create Comment</p>
    </a>
  {{/if}}
  {{#each post.comments as |comment|}}
    <div class='card rounded-lg m-10 px-5 py-3 bg-green-300 text-zinc-700 grid grid-cols-12 grid-rows-2'>
      <p class='col-span-8'>{{comment.commentText}}</p>
      <p class='col-start-9 col-span-2 grid justify-self-end pr-5'>By: {{comment.user.username}}</p>
      <div class='justify-self-start col-start-11 col-span-2'>{{ formatDateUTC comment.createdAt }}</div>
      {{#if (isEqual comment.userId comment.currentUser)}}
        <div class='row-start-2 col-start-10 col-span-2 pt-2'>
          <div class='flex flex-row justify-end'> <!-- Div for the buttons to edit and delete the comment -->
            <div class='pr-2'>
              <a href='/editComment/{{comment.id}}' class='text-sm underline text-zinc-700 hover:cursor-pointer' data-post-id='{{comment.postId}}' id='editCommentFormBtn'>Edit</a> <!-- Button to edit the comment -->
            </div>
            <div class=''>
              <a class='text-sm underline text-zinc-700 hover:cursor-pointer' data-comment-id='{{comment.id}}' id='deleteCommentBtn'>Delete</a> <!-- Button to delete the comment -->
            </div>
          </div>
        </div>
      {{/if}}
    </div>
  {{/each}}
</div>